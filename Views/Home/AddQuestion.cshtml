@model Quiz_Application.Models.Question

@{
    Layout = null;
    ViewBag.Title = "Add Question";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 30px;
            color: #343a40;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 0.875em;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Add Question</h2>
        <form id="addQuestionForm" asp-action="RegisterQ" asp-controller="Question" method="post">
            <div class="form-group">
                <label asp-for="Quiz_Question" class="control-label"></label>
                <input asp-for="Quiz_Question" class="form-control" />
                <span asp-validation-for="Quiz_Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionA" class="control-label"></label>
                <input asp-for="OptionA" class="form-control" />
                <span asp-validation-for="OptionA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionB" class="control-label"></label>
                <input asp-for="OptionB" class="form-control" />
                <span asp-validation-for="OptionB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionC" class="control-label"></label>
                <input asp-for="OptionC" class="form-control" />
                <span asp-validation-for="OptionC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionD" class="control-label"></label>
                <input asp-for="OptionD" class="form-control" />
                <span asp-validation-for="OptionD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectOption" class="control-label"></label>
                <input asp-for="CorrectOption" class="form-control" />
                <span asp-validation-for="CorrectOption" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add Question</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
